{
  "name": "securebrowserwrapper",
  "version": "1.1.1",
  "description": "A secure Electron-based browser wrapper with enhanced security features",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "start:dev": "electron . --enable-logging",
    "start:debug": "electron . --inspect=5858 --enable-logging",
    "start:mem": "electron . --js-flags=\"--expose-gc\"",
    "audit:fix": "npm audit fix",
    "audit:fix:force": "npm audit fix --force",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "audit": "npm audit --production",
    "check-updates": "npx npm-check-updates"
  },
  "author": "@nekupaw",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "YOUR_GITHUB_REPO_URL"
  },
  "keywords": [
    "secure",
    "browser",
    "wrapper",
    "electron"
  ],
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "electron-winstaller": "^5.3.0",
    "eslint": "^9.38.0",
    "@electron-toolkit/eslint-config": "^2.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "secure.browser.wrapper",
    "productName": "SecureBrowserWrapper",
    "compression": "store",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png",
      "category": "public.app-category.utilities"
    },
    "extraResources": [],
    "files": [
      "**/*",
      "!build/**/*"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
